<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="GiftGivingRice" transaction-type="RESOURCE_LOCAL">
		<provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
		<class>model.CharitableGift</class>
		<class>model.CharityRecipient</class>
		<class>model.Gift</class>
		<class>model.PersonalGift</class>
		<class>model.PersonRecipient</class>
		<class>model.Recipient</class>
		<class>controller.RelationshipConverterInterface</class>
		<class>model.Relationship</class>
		<class>model.Occasion</class>
		<class>controller.OccasionConverterInterface</class>
		<class>controller.BooleanTFConverterInterface</class>
		<class>controller.DateConverterInterface</class>
		<properties>
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/giftgiving"/>
			<property name="javax.persistence.jdbc.user" value="root"/>
			<property name="javax.persistence.jdbc.password" value="java1718"/>
		</properties>
	</persistence-unit>
</persistence>
